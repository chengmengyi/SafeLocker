<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="328dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ffffff_13dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#192340"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/tv_tag"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AD"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_171c35_8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_title"
                app:layout_constraintBottom_toBottomOf="@id/native_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#8A192340"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintTop_toBottomOf="@id/native_title"/>
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/native_logo"
                app:layout_constraintBottom_toTopOf="@id/native_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_install"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Install"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_feb63f_24dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ad_cover" />
</RelativeLayout>